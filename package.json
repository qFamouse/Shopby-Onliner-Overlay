{
  "name": "shopby-onliner-overlay",
  "displayName": "ShopBy + Onliner Overlay",
  "version": "1.0.0",
  "description": "Shows prices from Shop.by directly on Onliner product pages.",
  "author": "Famouse <famouse_ru@mail.ru>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2 --zip",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://catalog.onliner.by/*",
      "https://www.onliner.by/*",
      "https://shop.by/*"
    ],
    "permissions": [
      "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "shopby-onliner@famouse.dev",
        "strict_min_version": "109.0",
        "data_collection_permissions": {
          "required": [
            "none"
          ]
        }
      }
    }
  }
}
